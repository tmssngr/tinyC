		if (chr == 57416) {
			curr_r = ((curr_r + 20) - 1) % 20;
		}
		else {
			if (chr == 57424) {
				curr_r = (curr_r + 1) % 20;
			}
			else {
				if (chr == 57419) {
					curr_c = ((curr_c + 40) - 1) % 40;
				}
				else {
					if (chr == 57419) {
						curr_c = ((curr_c + 40) - 1) % 40;
					}
					else {
						if (chr == 57421) {
							curr_c = (curr_c + 1) % 40;
						}
						else {
							if (chr == 32) {
								if (!needsInitialize) {
									cell = getCell(curr_r, curr_c);
									if (!(isOpen(cell))) {
										cell = cell ^ 4;
										setCell(curr_r, curr_c, cell);
									}
								}
							}
							else {
								if (chr == 13) {
									if (needsInitialize) {
										needsInitialize = false;
										initField(curr_r, curr_c);
									}
									cell = getCell(curr_r, curr_c);
									if (!(isOpen(cell))) {
										setCell(curr_r, curr_c, cell | 2);
									}
									if (isBomb(cell)) {
										printField(curr_r, curr_c);
										printString("boom! you've lost");
										break;
									}
									maybeRevealAround(curr_r, curr_c);
								}
							}
						}
					}
				}
			}
